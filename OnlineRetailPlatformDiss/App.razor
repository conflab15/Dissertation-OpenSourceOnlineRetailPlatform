<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="m-4 pt-7">
                         <div class="alert alert-danger alert-dismissible fade show">
                            <h4 class="alert-heading"><i class="bi-exclamation-octagon-fill"></i> Oops! Something went wrong.</h4>
                            <p>You must be logged in with a valid account to access this part of the site!</p>
                            <hr>
                            <p class="mb-0">Click the Login Button below to sign into your account.</p>
                            <a type="button" class="btn btn-danger mt-3" href="Identity/Account/Login">Login</a>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
            <div class="m-4 pt-7">
                <div class="alert alert-danger alert-dismissible fade show">
                    <h4 class="alert-heading"><i class="bi-exclamation-octagon-fill"></i> Uh oh! We couldn't find this part of the site?.</h4>
                    <hr>
                    <p class="mb-0">Back to safety:</p>
                    <a type="button" class="btn btn-danger mt-3" href="/index">Home</a>
                </div>
            </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
