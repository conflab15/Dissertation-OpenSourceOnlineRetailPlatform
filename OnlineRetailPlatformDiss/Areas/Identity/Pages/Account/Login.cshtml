@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
 <!-- Custom styles for this template -->
<link href="signin.css" rel="stylesheet">

<div class="text-center" id="formbody">
    <div class="form-signin">
      <form id="account" method="post">
        <img class="mb-4" src="/images/logoplaceholder.png" alt="Logo Placeholder" width="75" height="75">
        <h1 class="h3 mb-3 fw-normal">Please log in</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" aria-required="true" id="Input_Email" />
            <label asp-for="Input.Email" class="form-label">Email address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" id="Input_Pass" />
            <label asp-for="Input.Password" class="form-label">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3 mt-2">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <button id="login-submit" class="w-100 btn btn-lg btn-success mb-2 pb-2" type="submit">Log in</button>
        <p>
            <a class="w-100 btn btn-lg btn-primary" id="forgot-password" asp-page="./ForgotPassword">I've forgot my password</a>
        </p>
        <p>
            <a class="w-100 btn btn-lg btn-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">I don't own an account!</a>
        </p>
        <p>
            <a class="w-100 btn btn-lg btn-primary" id="resend-confirmation" asp-page="./ResendEmailConfirmation">I haven't received a confirmation email</a>
        </p>
        <p class="mt-5 mb-3 text-muted">&copy; 2021 – @DateTime.Now.Year</p>
      </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
