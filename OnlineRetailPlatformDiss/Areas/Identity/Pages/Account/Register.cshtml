@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row text-center bg-light" id="RegisterForm">
    <h1>
        @ViewData["Title"]
        <svg xmlns="http://www.w3.org/2000/svg" width="42" height="42" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
        </svg></h1>
    <br />
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1 class="h3 mb-3 fw-normal">Register an Account with us!</h1>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating pt-2">
            <input asp-for="Input.Email" class="form-control required-field" autocomplete="username" aria-required="true" id="Input_Email" />
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.Forename" class="form-control" autocomplete="Forename" aria-required="true" id="Input_Forename" />
            <label asp-for="Input.Forename"></label>
            <span asp-validation-for="Input.Forename" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.Surname" class="form-control" autocomplete="Surname" aria-required="true" id="Input_Surname" />
            <label asp-for="Input.Surname"></label>
            <span asp-validation-for="Input.Surname" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.AddressLine1" class="form-control" autocomplete="Addressline1" aria-required="true" id="Input_AddressLine1" />
            <label asp-for="Input.AddressLine1"></label>
            <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.AddressLine2" class="form-control" autocomplete="Addressline2" aria-required="true" id="Input_AddressLine2" />
            <label asp-for="Input.AddressLine2"></label>
            <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.Town" class="form-control" autocomplete="Town" aria-required="true" id="Input_Town" />
            <label asp-for="Input.Town"></label>
            <span asp-validation-for="Input.Town" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.County" class="form-control" autocomplete="County" aria-required="true" id="Input_County" />
            <label asp-for="Input.County"></label>
            <span asp-validation-for="Input.County" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.PostCode" class="form-control" autocomplete="Post Code" aria-required="true" id="Input_PostCode" />
            <label asp-for="Input.PostCode"></label>
            <span asp-validation-for="Input.PostCode" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" id="Input_Password" />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" id="Input_ConfirmPass" />
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                  <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                  <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                </svg>
                Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
