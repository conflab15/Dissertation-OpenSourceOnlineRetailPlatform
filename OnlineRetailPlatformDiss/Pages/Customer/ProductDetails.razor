@code {
    [Parameter]
    public Guid? ProductId { get; set; }
    ProductModel? Product;
    int Amount = 1;

    protected override void OnInitialized()
    {
        if (ProductId is not null)
        {
            Product = _context.Products.FirstOrDefault(p => p.ProductID == ProductId); //Get the Product Model...
        }
    }

    //Add To Basket Method...
    private async void AddToBasket(ProductModel product, int quantity)
    {
        if(quantity <= 0)
        {
            quantity = 1;
        }

        try
        {
            var count = await basket.AddToBasket(product.ProductID, quantity); //Getting the returned product count to update the appstate...
            state.SetBasketCount(count.BasketCount); //Setting the AppState with the returned count...

            await js.InvokeVoidAsync("confirmChanges", "Added to Basket", $"{quantity} x {product.ProductName} has been added to your basket!", "success");
        }
        catch (Exception e)
        {
            await js.InvokeVoidAsync("confirmChanges", "Failed", $"The product could not be added to your Basket: {e.Message}", "warning");
        }
        
        StateHasChanged();
    }


}
